# Server Config
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgres://permisos_admin:Permisos2025!@localhost:5432/permisos_digitales_dev

# Puppeteer / Government Site Credentials (Dedicated Sub-Account)
GOVT_SITE_LOGIN_URL=https://www.direcciondetransitohuitzucodelosfigueroa.gob.mx/login
GOVT_USERNAME=your_username
GOVT_PASSWORD=your_password

# Session Secret
SESSION_SECRET=generate_a_strong_random_string_here # Generate a strong random string

# Email Configuration (For password reset and notifications)
# SMTP Configuration (Used as fallback if Mailgun is not configured)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your_ethereal_email
EMAIL_PASS=your_ethereal_password
EMAIL_FROM=noreply@example.com

# Mailgun Configuration (Recommended for Production)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_sending_domain.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_URL=redis://localhost:6379

# Application URLs
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001/api

# Storage Configuration
# Options: 'local' or 's3'
STORAGE_TYPE=local

# AWS S3 Configuration (only needed if STORAGE_TYPE=s3)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key-id
# S3_SECRET_ACCESS_KEY=your-secret-access-key
# S3_ENDPOINT=https://custom-endpoint.example.com # Optional, for non-AWS S3 compatible services
# S3_URL_EXPIRATION=3600 # URL expiration in seconds, default 1 hour

# Conekta Payment Gateway Configuration
# Replace these placeholder values with actual Conekta API keys
# Use test keys for development and staging environments
# Use production keys only in production environment
CONEKTA_PUBLIC_KEY=your_conekta_public_key
CONEKTA_PRIVATE_KEY=your_conekta_private_key
# Webhook secret for verifying incoming webhook events from Conekta
# This is different from your API keys and can be found in the Conekta Dashboard
# under Developers > Webhooks > Signing Secret
CONEKTA_WEBHOOK_SECRET=your_conekta_webhook_secret
