# Production Environment Template
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control

# Server Config
NODE_ENV=production
PORT=3001

# Database Configuration - Production
# Get actual credentials from AWS RDS console after rotating password
DATABASE_URL=postgres://permisos_admin:NEW_SECURE_PASSWORD@permisos-digitales-db.cnkiusqqw1fm.us-west-1.rds.amazonaws.com:5432/PD_DB
DISABLE_SSL=false

# Session Secret (generate a strong random string - use scripts/generate-production-secrets.js)
SESSION_SECRET=your_generated_session_secret_here

# Email Configuration - AWS SES SMTP
# Create new SMTP credentials after rotating old ones
EMAIL_HOST=email-smtp.us-west-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USER=NEW_SES_SMTP_USERNAME
EMAIL_PASS=NEW_SES_SMTP_PASSWORD
EMAIL_FROM=contacto@permisosdigitales.com.mx

# Application URLs
APP_URL=https://api.permisosdigitales.com.mx
FRONTEND_URL=https://permisosdigitales.com.mx
API_URL=https://api.permisosdigitales.com.mx/api

# Redis Configuration (ElastiCache)
REDIS_HOST=master.permisos-digitales-redis.cwkbms.usw1.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 Configuration
# Create new IAM user and access keys after rotating old ones
STORAGE_TYPE=s3
S3_BUCKET=permisos-digitales-files-pdmx
S3_REGION=us-west-1
S3_ACCESS_KEY_ID=NEW_S3_ACCESS_KEY_ID
S3_SECRET_ACCESS_KEY=NEW_S3_SECRET_ACCESS_KEY

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
COOKIE_SECRET=your_generated_cookie_secret_here
ENABLE_HTTPS_REDIRECT=true

# Conekta Payment Gateway Configuration
# Get new API keys from Conekta dashboard after rotating old ones
CONEKTA_PUBLIC_KEY=NEW_CONEKTA_PUBLIC_KEY
CONEKTA_PRIVATE_KEY=NEW_CONEKTA_PRIVATE_KEY
CONEKTA_WEBHOOK_SECRET=NEW_CONEKTA_WEBHOOK_SECRET

# Internal API Security
INTERNAL_API_KEY=your_new_generated_internal_api_key_here
