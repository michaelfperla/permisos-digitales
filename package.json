{
  "name": "permisos-digitales",
  "version": "1.0.0",
  "description": "Digital permit application and management system",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "cross-env NODE_ENV=production node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:frontend": "browser-sync start --config config/bs-config.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "test": "jest --detectOpenHandles",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.js' --detectOpenHandles",
    "test:integration": "jest --testMatch='**/__tests__/**/*.integration.test.js' --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --detectOpenHandles",
    "migrate": "node-pg-migrate --migrations-dir ./src/db/migrations --config config/pgm-config.js",
    "migrate:up": "node-pg-migrate up --migrations-dir ./src/db/migrations --config config/pgm-config.js",
    "migrate:down": "node-pg-migrate down --migrations-dir ./src/db/migrations --config config/pgm-config.js",
    "migrate:create": "node-pg-migrate create --migrations-dir ./src/db/migrations --config config/pgm-config.js",
    "db:setup": "node database/config/setup.js",
    "db:setup:prod": "node database/config/production_setup.js",
    "db:verify": "node database/tools/verify-connection.js",
    "db:backup": "node database/tools/backup.js",
    "db:restore": "node database/tools/restore.js",
    "db:monitor": "node database/tools/monitor.js",
    "db:migrate": "node database/tools/run-migration.js",
    "lint:js": "eslint src/ frontend/src/",
    "lint:css": "stylelint frontend/src/**/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "eslint src/ frontend/src/ --fix",
    "prepare": "husky && husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.19.1",
    "@dr.pogodin/csurf": "^1.15.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "bcrypt": "^5.1.1",
    "conekta": "^6.0.3",
    "connect-pg-simple": "^8.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "dotenv-flow": "^3.3.0",
    "express": "^4.21.2",
    "express-http-context": "^1.2.5",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "framer-motion": "^12.12.1",
    "helmet": "^6.2.0",
    "ioredis": "^5.6.1",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^3.0.3",
    "node-pg-migrate": "^7.9.1",
    "nodemailer": "^6.10.1",
    "nodemailer-mailgun-transport": "^2.1.5",
    "pg": "^8.15.6",
    "prom-client": "^14.2.0",
    "redis": "^5.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "body-parser": "^2.2.0",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "memorystore": "^1.6.7",
    "nodemon": "^3.1.10",
    "puppeteer": "^24.8.1",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "overrides": {
    "axios": "^1.8.2"
  }
}
