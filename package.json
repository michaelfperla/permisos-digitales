{
  "name": "permisos-digitales",
  "version": "1.0.0",
  "description": "Digital permit application and management system",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "cross-env NODE_ENV=production node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:frontend": "browser-sync start --config config/bs-config.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "test": "jest --detectOpenHandles",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.js' --detectOpenHandles",
    "test:integration": "jest --testMatch='**/__tests__/**/*.integration.test.js' --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --detectOpenHandles",
    "test:check-coverage": "jest --coverage --detectOpenHandles",
    "migrate": "node-pg-migrate --migrations-dir ./src/db/migrations --config config/pgm-config.js",
    "migrate:up": "node-pg-migrate up --migrations-dir ./src/db/migrations --config config/pgm-config.js",
    "migrate:down": "node-pg-migrate down --migrations-dir ./src/db/migrations --config config/pgm-config.js",
    "migrate:create": "node-pg-migrate create --migrations-dir ./src/db/migrations --config config/pgm-config.js",
    "db:setup": "node database/config/setup.js",
    "db:setup:prod": "node database/config/production_setup.js",
    "db:verify": "node database/tools/verify-connection.js",
    "db:backup": "node database/tools/backup.js",
    "db:restore": "node database/tools/restore.js",
    "db:monitor": "node database/tools/monitor.js",
    "db:migrate": "node database/tools/run-migration.js",
    "lint:js": "npx eslint src/ && (cd frontend && npm run lint)",
    "lint:css": "stylelint frontend/src/**/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npx eslint src/ --fix && (cd frontend && npm run lint -- --fix)",
    "audit:code": "node scripts/code-audit.js",
    "audit:database": "node scripts/database-cleanup-analysis.js",
    "audit:full": "npm run audit:code && npm run audit:database",
    "audit:production": "node scripts/production-audit-fix.js",
    "validate:production": "node scripts/validate-production-config.js",
    "prepare:production": "bash scripts/prepare-production.sh",
    "deploy:production": "bash scripts/deploy-production-final.sh",
    "health:check": "node scripts/production-health-check.js",
    "prepare": "husky && husky install"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.682.0",
    "@aws-sdk/s3-request-presigner": "^3.817.0",
    "@dr.pogodin/csurf": "^1.15.0",
    "bcrypt": "^6.0.0",
    "conekta": "^6.0.3",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "express-http-context": "^2.0.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "node-cron": "^4.0.7",
    "node-pg-migrate": "^8.0.0",
    "nodemailer": "^7.0.3",
    "nodemailer-mailgun-transport": "^2.1.5",
    "pg": "^8.15.6",
    "prom-client": "^15.1.3",
    "redis": "^5.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "body-parser": "^2.2.0",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "memorystore": "^1.6.7",
    "nodemon": "^3.1.10",
    "puppeteer": "^24.8.1",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "overrides": {
    "axios": "^1.8.2"
  }
}
