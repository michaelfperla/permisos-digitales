{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"]
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/tests/**/*.js", "**/__tests__/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["**/controllers/**/*.js", "**/middleware/**/*.js"],
      "rules": {
        "no-unused-vars": ["warn", { "argsIgnorePattern": "next|req|res" }]
      }
    },
    {
      "files": ["frontend/src/js/components/**/*.js"],
      "rules": {
        "no-unused-vars": "warn"
      }
    }
  ]
}